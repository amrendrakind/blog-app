<h1 class="post_heading">This is for specific user</h1>

<div id="userTemplate">
   <%= render partial: "shared/single_user", locals: { user: @user } %>
   <div id="bio">
   <h3>Bio</h3>
   <p><%= @user.bio %></p>
   </div>
<% @posts.each do |post| %>
     <%= render partial: "shared/single_post", locals: {user:@user, post: post } %>
<% end %>
<%= button_to link_to "See all posts", user_path(@user) %>
<%= button_to link_to "New Post", new_user_post_path(@user)%>
 </div>